---
/**
 * TicketCardPista - Card de ingresso Pista com imagem
 * Reconstruído do zero: imagem proporcional (1200x1350), linha tracejada e botão igual aos demais cards
 */

export interface Props {
  ariaLabel: string;
  buyNowLabel: string;
  buyUrl?: string;
  imageUrl: string;
}

const { ariaLabel, buyNowLabel, buyUrl = '#', imageUrl } = Astro.props;
---

<article class="ticket-card-pista" aria-label={ariaLabel}>
  <!-- Furo circular do ticket -->
  <div class="ticket-card-pista__hole" aria-hidden="true"></div>

  <!-- Linha tracejada -->
  <div class="ticket-card-pista__perforation" aria-hidden="true"></div>

  <!-- Imagem com botão sobreposto -->
  <div class="ticket-card-pista__image-wrap">
    <img
      src={imageUrl}
      alt={ariaLabel}
      class="ticket-card-pista__image"
      loading="lazy"
      width="1200"
      height="1350"
      decoding="async"
    />
    <div class="ticket-card-pista__action">
      <a
        href={buyUrl}
        class="ticket-card-pista__button"
        aria-label={`${buyNowLabel} - ${ariaLabel}`}
        target="_blank"
        rel="noopener noreferrer"
      >
        {buyNowLabel}
      </a>
    </div>
  </div>
</article>

<style>
  .ticket-card-pista {
    position: relative;
    display: flex;
    flex-direction: column;
    width: 100%;
    max-width: 360px;
    margin-inline: auto;
    padding-top: 52px;
    overflow: hidden;
    background-color: var(--color-orange-pista-bg);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
    transition:
      transform var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
  }

  .ticket-card-pista:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  /* Furo circular */
  .ticket-card-pista__hole {
    position: absolute;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 32px;
    height: 32px;
    background-color: var(--color-cream);
    border-radius: var(--radius-full);
    box-shadow:
      inset 0 2px 4px rgba(0, 0, 0, 0.2),
      0 1px 2px rgba(0, 0, 0, 0.1);
    z-index: 5;
  }

  /* Linha tracejada */
  .ticket-card-pista__perforation {
    position: absolute;
    top: 60px;
    left: 0;
    width: 100%;
    height: 2px;
    background-image: repeating-linear-gradient(
      to right,
      var(--color-cream) 0,
      var(--color-cream) 8px,
      transparent 8px,
      transparent 16px
    );
    opacity: 0.3;
    z-index: 5;
  }

  /* Área da imagem - estende para cima (até a linha tracejada) para preencher como um todo */
  .ticket-card-pista__image-wrap {
    position: relative;
    width: 100%;
    margin-top: -52px;
    aspect-ratio: 1200 / 1750;
    overflow: visible;
  }

  /* deslocamento e zoom para ajuste gradual */
  .ticket-card-pista__image {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
    object-position: 42% center;
    transform: translateX(5px) scale(1.005);
  }

  /* Botão no espaço que sobrou ao subir a imagem - preenche todo o espaço */
  .ticket-card-pista__action {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50px;
    display: flex;
    z-index: 5;
  }

  .ticket-card-pista__button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    padding: 0 var(--spacing-md);
    border: none;
    border-radius: 0 0 var(--radius-2xl) var(--radius-2xl);
    font-family: var(--font-heading);
    font-size: 30px;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    background-color: #094931;
    color: var(--color-cream);
    transition:
      background-color var(--duration-fast) var(--ease-out),
      opacity var(--duration-fast) var(--ease-out);
  }

  .ticket-card-pista__button:hover {
    background-color: var(--color-green-light);
    opacity: 0.95;
  }

  .ticket-card-pista__button:focus-visible {
    outline: 3px solid var(--color-cream);
    outline-offset: 2px;
  }

  /* Desktop: card preenche a coluna e área da imagem maior */
  @media (min-width: 768px) {
    .ticket-card-pista {
      max-width: none;
    }

    .ticket-card-pista__image-wrap {
      aspect-ratio: 1200 / 1700;
    }
  }

  /* Responsivo */
  @media (max-width: 768px) {
    .ticket-card-pista__hole {
      width: 28px;
      height: 28px;
      top: 16px;
    }

    .ticket-card-pista__perforation {
      top: 52px;
    }

    .ticket-card-pista__button {
      font-size: 30px;
    }
  }

  @media (max-width: 480px) {
    .ticket-card-pista__hole {
      width: 24px;
      height: 24px;
      top: 14px;
    }

    .ticket-card-pista__perforation {
      top: 46px;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ticket-card-pista {
      transition: none;
    }

    .ticket-card-pista:hover {
      transform: none;
    }

    .ticket-card-pista__button {
      transition: none;
    }
  }
</style>
