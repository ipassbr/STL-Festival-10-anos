---
/**
 * TicketCard Component - STL Festival 2026
 * Card de ingresso reutilizável com design inspirado no Klangtherapie Festival
 *
 * @component
 * @example
 * <TicketCard
 *   name="Camarote Premium"
 *   description="Área VIP com bar exclusivo"
 *   soldOut={true}
 *   variant="premium"
 *   ariaLabel="Camarote Premium - Esgotado"
 * />
 */

export interface Props {
  name: string;
  price?: string;
  description?: string;
  features?: string[];
  featureImage?: string;
  decorativeImage?: string;
  soldOut?: boolean;
  variant: 'premium' | 'standard';
  ariaLabel: string;
  buyNowLabel: string;
  buyUrl?: string;
  showPrice?: boolean;
  largeTitle?: boolean;
}

const {
  name,
  price,
  description,
  features,
  featureImage,
  decorativeImage,
  soldOut = false,
  variant,
  ariaLabel,
  buyNowLabel,
  buyUrl = '#',
  showPrice = true,
  largeTitle = false,
} = Astro.props;

const variantClasses = {
  premium: 'ticket-card--premium',
  standard: 'ticket-card--standard',
};
---

<article
  class={`ticket-card ${variantClasses[variant]} ${soldOut ? 'ticket-card--sold-out' : ''}`}
  aria-label={ariaLabel}
>
  <!-- Furo circular do ticket (parte superior) -->
  <div class="ticket-card__hole" aria-hidden="true"></div>

  <!-- Linha tracejada abaixo do furo -->
  <div class="ticket-card__perforation" aria-hidden="true"></div>

  <!-- Badge "Sold Out" diagonal (se aplicável) -->
  {
    soldOut && (
      <div class="ticket-card__sold-out-banner" aria-hidden="true">
        <span class="ticket-card__sold-out-text">{buyNowLabel}</span>
      </div>
    )
  }

  <!-- Header do card com nome do ticket -->
  <header
    class={`ticket-card__header ${largeTitle ? 'ticket-card__header--left' : ''}`}
  >
    <h3
      class={`ticket-card__name ${largeTitle ? 'ticket-card__name--large' : ''}`}
    >
      {name}
    </h3>
  </header>

  <!-- Círculo com preço (apenas se showPrice for true) -->
  {
    showPrice && (
      <div class="ticket-card__price-circle" aria-hidden="true">
        {price && <span class="ticket-card__price">{price}</span>}
        {!price && soldOut && <span class="ticket-card__price">-</span>}
      </div>
    )
  }

  <!-- Imagem decorativa no canto (se fornecida) -->
  {
    featureImage && (
      <div class="ticket-card__feature-image">
        <img
          src={featureImage}
          alt=""
          role="presentation"
          loading="lazy"
          width="120"
          height="120"
        />
      </div>
    )
  }

  <!-- Lista de features com X (se fornecida) -->
  {
    features && features.length > 0 && (
      <div class="ticket-card__features">
        <ul class="ticket-card__features-list">
          {features.map((feature) => (
            <li class="ticket-card__feature-item">
              <span class="ticket-card__feature-bullet" aria-hidden="true" />
              <span class="ticket-card__feature-text">{feature}</span>
            </li>
          ))}
        </ul>
      </div>
    )
  }

  <!-- Elementos decorativos de fundo (montanha + nuvens) -->
  {
    features && (
      <div class="ticket-card__background-decorations" aria-hidden="true">
        <div class="ticket-card__orange-shape" />
        <div class="ticket-card__mountain-decoration" />
        {decorativeImage && (
          <div class="ticket-card__decorative-image">
            <img
              src={decorativeImage}
              alt=""
              role="presentation"
              loading="lazy"
              width="80"
              height="80"
            />
          </div>
        )}
        <div class="ticket-card__cloud ticket-card__cloud--1" />
        <div class="ticket-card__cloud ticket-card__cloud--2" />
      </div>
    )
  }

  <!-- Descrição do ingresso (se não houver features) -->
  {
    !features && description && (
      <div class="ticket-card__description">
        <p>{description}</p>
      </div>
    )
  }

  <!-- Botão de compra (ou disabled se sold out) -->
  <div class="ticket-card__action">
    {
      soldOut ? (
        <button
          type="button"
          class="ticket-card__button ticket-card__button--disabled"
          disabled
          aria-disabled="true"
        >
          {buyNowLabel}
        </button>
      ) : (
        <a
          href={buyUrl}
          class="ticket-card__button"
          aria-label={`${buyNowLabel} - ${name}`}
          target="_blank"
          rel="noopener noreferrer"
        >
          {buyNowLabel}
        </a>
      )
    }
  </div>
</article>

<style>
  /* ========== CARD BASE ========== */
  .ticket-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    min-height: 520px;
    padding: calc(var(--spacing-2xl) + var(--spacing-lg)) var(--spacing-2xl)
      var(--spacing-2xl);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-lg);
    transition:
      transform var(--duration-normal) var(--ease-out),
      box-shadow var(--duration-normal) var(--ease-out);
    overflow: visible; /* Permite o furo circular ficar visível */
  }

  .ticket-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  /* ========== TICKET HOLE (Furo circular no topo) ========== */
  .ticket-card__hole {
    position: absolute;
    top: 24px;
    left: 50%;
    transform: translateX(-50%);
    width: 32px;
    height: 32px;
    background-color: var(--color-cream);
    border-radius: var(--radius-full);
    box-shadow:
      inset 0 2px 4px rgba(0, 0, 0, 0.2),
      0 1px 2px rgba(0, 0, 0, 0.1);
    z-index: 5;
  }

  /* ========== TICKET PERFORATION (Linha tracejada) ========== */
  .ticket-card__perforation {
    position: absolute;
    top: 68px;
    left: 0;
    width: 100%;
    height: 2px;
    background-image: repeating-linear-gradient(
      to right,
      currentColor 0,
      currentColor 8px,
      transparent 8px,
      transparent 16px
    );
    opacity: 0.3;
    z-index: 5;
  }

  /* ========== VARIANTS ========== */
  /* Premium (Sold Out) - Grayscale */
  .ticket-card--premium {
    background: linear-gradient(
      135deg,
      var(--color-gray-300) 0%,
      var(--color-gray-400) 100%
    );
    color: var(--color-gray-900);
  }

  /* Cor da bolinha para card premium */
  .ticket-card--premium .ticket-card__feature-bullet {
    background-color: var(--color-gray-700);
  }

  /* Título centralizado para card premium (sobrescreve left alignment) */
  .ticket-card--premium .ticket-card__header--left {
    text-align: center;
    padding-left: 0;
  }

  /* Standard - Camarote (vermelho) */
  .ticket-card--standard {
    background: linear-gradient(
      135deg,
      var(--color-red) 0%,
      var(--color-red-light) 100%
    );
    color: var(--color-cream);
  }

  /* ========== SOLD OUT BANNER (Badge no topo direito) ========== */
  .ticket-card__sold-out-banner {
    position: absolute;
    top: 30px;
    right: var(--spacing-lg);
    padding: var(--spacing-xs) var(--spacing-lg);
    background-color: var(--color-black);
    color: var(--color-white);
    text-align: center;
    font-family: var(--font-heading);
    font-weight: 700;
    font-size: 0.875rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    border-radius: var(--radius-md);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    z-index: 15;
  }

  /* Garantir que a faixa fique contida no card */
  .ticket-card--sold-out {
    overflow: hidden;
  }

  .ticket-card__sold-out-text {
    display: block;
    font-style: italic;
  }

  /* ========== HEADER ========== */
  .ticket-card__header {
    text-align: center;
    margin-top: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
    position: relative;
    z-index: 5;
  }

  .ticket-card__name {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1.2;
    margin: 0;
  }

  /* Título grande para card da Pista */
  .ticket-card__name--large {
    font-size: 4rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 900;
  }

  /* ========== PRICE CIRCLE ========== */
  .ticket-card__price-circle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 180px;
    height: 180px;
    border-radius: var(--radius-full);
    background-color: rgba(255, 255, 255, 0.15);
    border: 4px solid rgba(255, 255, 255, 0.3);
    margin: var(--spacing-xl) 0;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 5;
  }

  .ticket-card__price {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1;
  }

  /* ========== DESCRIPTION ========== */
  .ticket-card__description {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    padding: 0 var(--spacing-md);
    position: relative;
    z-index: 5;
  }

  .ticket-card__description p {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    opacity: 0.95;
  }

  /* ========== FEATURE IMAGE (Canto direito) ========== */
  .ticket-card__feature-image {
    position: absolute;
    top: 35%;
    right: 0;
    width: 160px;
    height: 160px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 5;
    transform: rotate(-45deg) translateX(10px);
    pointer-events: none;
  }

  .ticket-card__feature-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(1.1);
  }

  /* ========== FEATURES LIST ========== */
  .ticket-card__features {
    width: 100%;
    margin: 0 0 var(--spacing-xl) 0;
    padding: 0;
    z-index: 5;
    position: relative;
  }

  .ticket-card__features-list {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .ticket-card__feature-item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.5;
  }

  .ticket-card__feature-bullet {
    flex-shrink: 0;
    width: 10px;
    height: 10px;
    border-radius: var(--radius-full);
    background-color: var(--color-cream);
    opacity: 0.95;
    margin-top: 0.35rem;
  }

  /* Cor da bolinha para card standard (camarote) */
  .ticket-card--standard .ticket-card__feature-bullet {
    background-color: var(--color-cream);
  }

  .ticket-card__feature-text {
    flex: 1;
    opacity: 0.95;
  }

  /* ========== BACKGROUND DECORATIONS (Laranja + Nuvens) ========== */
  .ticket-card__background-decorations {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    z-index: 1;
    pointer-events: none;
  }

  /* Ocultar orange-shape do card Camarote */
  .ticket-card--standard .ticket-card__orange-shape {
    display: none;
  }

  /* Montanha decorativa vermelha (Camarote) */
  .ticket-card__mountain-decoration {
    display: none;
  }

  .ticket-card--standard .ticket-card__mountain-decoration {
    display: block;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 0;
    border-left: 100px solid transparent;
    border-right: 100px solid transparent;
    border-bottom: 120px solid var(--color-orange);
    opacity: 0.3;
    z-index: 1;
  }

  /* Imagem decorativa (ET para Camarote, Mão para Pista) */
  .ticket-card__decorative-image {
    display: none;
    position: absolute;
    z-index: 3;
  }

  .ticket-card__decorative-image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: brightness(1.1);
  }

  /* ET no Camarote - ao lado da montanha, canto inferior direito */
  .ticket-card--standard .ticket-card__decorative-image {
    display: block;
    bottom: 140px;
    right: 30px;
    width: 80px;
    height: 80px;
    transform: none;
  }

  /* Nuvens decorativas com animação */
  .ticket-card__cloud {
    position: absolute;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
    z-index: 2;
    animation-timing-function: linear;
    animation-iteration-count: infinite;
  }

  .ticket-card__cloud--1 {
    top: 120px;
    right: 40px;
    width: 60px;
    height: 25px;
    animation-name: cloudFloat1;
    animation-duration: 20s;
  }

  .ticket-card__cloud--1::before,
  .ticket-card__cloud--1::after {
    content: '';
    position: absolute;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
  }

  .ticket-card__cloud--1::before {
    width: 40px;
    height: 40px;
    top: -18px;
    left: 5px;
    box-shadow:
      15px 0 0 -5px rgba(255, 255, 255, 0.15),
      -10px 5px 0 -8px rgba(255, 255, 255, 0.12);
  }

  .ticket-card__cloud--1::after {
    width: 45px;
    height: 45px;
    top: -22px;
    right: 8px;
    box-shadow:
      -15px 5px 0 -10px rgba(255, 255, 255, 0.13),
      10px 0 0 -8px rgba(255, 255, 255, 0.15);
  }

  .ticket-card__cloud--2 {
    bottom: 200px;
    left: 30px;
    width: 50px;
    height: 20px;
    animation-name: cloudFloat2;
    animation-duration: 25s;
    animation-delay: -5s;
  }

  .ticket-card__cloud--2::before,
  .ticket-card__cloud--2::after {
    content: '';
    position: absolute;
    background-color: rgba(255, 255, 255, 0.15);
    border-radius: var(--radius-full);
  }

  .ticket-card__cloud--2::before {
    width: 32px;
    height: 32px;
    top: -14px;
    left: 6px;
    box-shadow:
      12px 0 0 -5px rgba(255, 255, 255, 0.15),
      -8px 3px 0 -6px rgba(255, 255, 255, 0.12);
  }

  .ticket-card__cloud--2::after {
    width: 35px;
    height: 35px;
    top: -16px;
    right: 6px;
    box-shadow:
      -12px 4px 0 -8px rgba(255, 255, 255, 0.13),
      8px 0 0 -6px rgba(255, 255, 255, 0.15);
  }

  /* ========== ACTION BUTTON ========== */
  .ticket-card__action {
    width: 100%;
    margin-top: auto;
    position: relative;
    z-index: 5;
  }

  .ticket-card__button {
    display: block;
    width: 100%;
    padding: var(--spacing-md) var(--spacing-xl);
    border: none;
    border-radius: var(--radius-lg);
    font-family: var(--font-heading);
    font-size: 1.125rem;
    font-weight: 600;
    text-align: center;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition:
      background-color var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  /* Button para cards standard (verde/azul) */
  .ticket-card--standard .ticket-card__button {
    background-color: var(--color-cream);
    color: var(--color-green-dark);
  }

  .ticket-card--standard .ticket-card__button:hover {
    background-color: var(--color-cream-light);
    transform: scale(1.02);
  }

  .ticket-card--standard .ticket-card__button:focus-visible {
    outline: 3px solid var(--color-cream);
    outline-offset: 2px;
  }

  /* Button disabled (sold out) */
  .ticket-card__button--disabled {
    background-color: var(--color-gray-600);
    color: var(--color-gray-300);
    cursor: not-allowed;
    opacity: 0.7;
  }

  .ticket-card__button--disabled:hover {
    transform: none;
  }

  /* ========== SOLD OUT STATE ========== */
  .ticket-card--sold-out {
    opacity: 0.85;
  }

  .ticket-card--sold-out:hover {
    transform: none;
  }

  /* ========== RESPONSIVE ========== */
  @media (max-width: 768px) {
    .ticket-card {
      min-height: 480px;
      padding: calc(var(--spacing-xl) + var(--spacing-md)) var(--spacing-xl)
        var(--spacing-xl);
    }

    .ticket-card__hole {
      width: 28px;
      height: 28px;
      top: 20px;
    }

    .ticket-card__perforation {
      top: 60px;
    }

    .ticket-card__sold-out-banner {
      font-size: 0.75rem;
      padding: var(--spacing-xs) var(--spacing-md);
      top: 25px;
      right: var(--spacing-md);
    }

    .ticket-card__name {
      font-size: 1.5rem;
    }

    .ticket-card__name--large {
      font-size: 3rem;
    }

    .ticket-card__header--left {
      padding-left: var(--spacing-md);
    }

    .ticket-card__price-circle {
      width: 150px;
      height: 150px;
    }

    .ticket-card__price {
      font-size: 2rem;
    }

    .ticket-card__description p {
      font-size: 0.9375rem;
    }

    .ticket-card__features {
      padding: 0;
    }

    .ticket-card__feature-image {
      width: 120px;
      height: 120px;
      top: 30%;
      right: -5px;
      transform: rotate(-45deg) translateX(5px);
    }

    .ticket-card--standard .ticket-card__mountain-decoration {
      border-left-width: 80px;
      border-right-width: 80px;
      border-bottom-width: 90px;
    }

    .ticket-card--standard .ticket-card__decorative-image {
      width: 65px;
      height: 65px;
      bottom: 120px;
      right: 25px;
    }

    .ticket-card__cloud--1 {
      width: 50px;
      height: 20px;
      right: 30px;
    }

    .ticket-card__cloud--2 {
      width: 40px;
      height: 18px;
      left: 25px;
    }

    .ticket-card__feature-item {
      font-size: 0.9375rem;
      gap: var(--spacing-sm);
    }

    .ticket-card__feature-bullet {
      width: 8px;
      height: 8px;
    }

    .ticket-card__name--large {
      font-size: 3.5rem;
    }

    .ticket-card__header--left {
      padding-left: 0;
      margin-bottom: var(--spacing-md);
      margin-top: var(--spacing-md);
    }

    .ticket-card__features {
      padding-left: 0;
    }

    .ticket-card__button {
      font-size: 1rem;
      padding: var(--spacing-md);
    }
  }

  @media (max-width: 480px) {
    .ticket-card {
      min-height: 440px;
    }

    .ticket-card__hole {
      width: 24px;
      height: 24px;
      top: 18px;
    }

    .ticket-card__perforation {
      top: 54px;
    }

    .ticket-card__sold-out-banner {
      font-size: 0.625rem;
      padding: var(--spacing-xs) var(--spacing-sm);
      top: 22px;
      right: var(--spacing-sm);
    }

    .ticket-card__price-circle {
      width: 130px;
      height: 130px;
    }

    .ticket-card__price {
      font-size: 1.75rem;
    }

    .ticket-card__name--large {
      font-size: 2.5rem;
    }

    .ticket-card__header--left {
      padding-left: 0;
      margin-bottom: var(--spacing-sm);
      margin-top: var(--spacing-sm);
    }

    .ticket-card__features {
      padding: 0;
      margin: 0 0 var(--spacing-md) 0;
    }

    .ticket-card__feature-image {
      width: 100px;
      height: 100px;
      top: 28%;
      right: -5px;
      transform: rotate(-45deg) translateX(3px);
    }

    .ticket-card__feature-item {
      font-size: 0.875rem;
    }

    .ticket-card__feature-bullet {
      width: 7px;
      height: 7px;
    }

    .ticket-card--standard .ticket-card__mountain-decoration {
      border-left-width: 70px;
      border-right-width: 70px;
      border-bottom-width: 80px;
    }

    .ticket-card--standard .ticket-card__decorative-image {
      width: 55px;
      height: 55px;
      bottom: 100px;
      right: 20px;
    }

    .ticket-card__cloud--1 {
      width: 40px;
      height: 18px;
      right: 20px;
    }

    .ticket-card__cloud--2 {
      width: 35px;
      height: 16px;
      left: 20px;
    }
  }

  /* ========== ANIMATIONS ========== */
  @keyframes cloudFloat1 {
    0% {
      transform: translateX(0);
      opacity: 0.15;
    }
    50% {
      transform: translateX(-30px);
      opacity: 0.2;
    }
    100% {
      transform: translateX(0);
      opacity: 0.15;
    }
  }

  @keyframes cloudFloat2 {
    0% {
      transform: translateX(0);
      opacity: 0.15;
    }
    50% {
      transform: translateX(40px);
      opacity: 0.25;
    }
    100% {
      transform: translateX(0);
      opacity: 0.15;
    }
  }

  /* ========== ACESSIBILIDADE ========== */
  @media (prefers-reduced-motion: reduce) {
    .ticket-card,
    .ticket-card__button {
      transition: none;
    }

    .ticket-card:hover {
      transform: none;
    }

    .ticket-card__cloud {
      animation: none !important;
    }
  }
</style>
