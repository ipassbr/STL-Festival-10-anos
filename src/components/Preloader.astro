---
/**
 * Preloader Wrapper
 * Wrapper Astro que integra o componente React PreloaderReact
 */
import { getLangFromUrl, useTranslations } from '@/i18n/utils';
import PreloaderReact from './preloader/PreloaderReact';
import { ASSETS } from '@/utils/assets';

interface Props {
  videoUrl?: string;
  fallbackImage?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const logoUrl = ASSETS.logo;
---

<PreloaderReact
  client:only="react"
  logoSrc={logoUrl}
  phraseTop={t('preloader.phraseTop')}
  phraseBottom={t('preloader.phraseBottom')}
/>
