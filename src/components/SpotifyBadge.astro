---
/**
 * Spotify Badge Component
 * Badge reutiliz√°vel para links do Spotify
 */

import { getLangFromUrl, useTranslations } from '@/i18n/utils';

interface Props {
  playlistUrl: string;
  variant?: 'fixed' | 'absolute' | 'static';
  position?: 'left' | 'right';
  size?: 'sm' | 'md' | 'lg';
  showText?: boolean;
  class?: string;
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const {
  playlistUrl,
  variant = 'fixed',
  position = 'left',
  size = 'md',
  showText = true,
  class: className = '',
} = Astro.props;

const sizeClasses = {
  sm: 'text-xs px-2 py-1',
  md: 'text-sm px-3 py-2',
  lg: 'text-base px-4 py-3',
};
---

<a
  href={playlistUrl}
  target="_blank"
  rel="noopener noreferrer"
  class:list={[
    'spotify-badge',
    `spotify-badge--${variant}`,
    `spotify-badge--${position}`,
    sizeClasses[size],
    className,
  ]}
  aria-label={t('hero.spotifyLabel')}
>
  <svg
    class="spotify-icon"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="currentColor"
    aria-hidden="true"
  >
    <path
      d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"
    ></path>
  </svg>
  {showText && <span class="spotify-text">{t('hero.spotifyLabel')}</span>}
</a>

<style>
  .spotify-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--badge-bg, #1db954);
    color: var(--badge-text, var(--color-white));
    border-radius: var(--radius-full);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--duration-normal) var(--ease-out);
    box-shadow: var(--shadow-md);
    cursor: pointer;
    z-index: 50;
  }

  .spotify-badge:hover {
    transform: translateY(-2px) scale(1.05);
    box-shadow: var(--shadow-lg);
    background: var(--badge-bg, #1ed760);
  }

  .spotify-badge:focus-visible {
    outline: 3px solid var(--color-blue);
    outline-offset: 2px;
  }

  .spotify-badge--fixed {
    position: fixed;
    top: 1rem;
  }

  .spotify-badge--absolute {
    position: absolute;
    top: 1rem;
  }

  .spotify-badge--static {
    position: static;
  }

  .spotify-badge--left {
    left: 1rem;
  }

  .spotify-badge--right {
    right: 1rem;
  }

  .spotify-icon {
    flex-shrink: 0;
  }

  .spotify-text {
    white-space: nowrap;
  }

  /* Hide text on very small screens */
  @media (max-width: 375px) {
    .spotify-text {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .spotify-badge--left {
      left: 1.5rem;
    }

    .spotify-badge--right {
      right: 1.5rem;
    }
  }
</style>
